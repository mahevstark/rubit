<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.3"
            android:gravity="start|center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:src="@color/colorBlue"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
        <TextView
            android:layout_marginStart="5dp"
            android:text="username"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:srcCompat="@drawable/ic_baseline_arrow_right_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="You"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/date"
            android:layout_weight="0.7"
            android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
            android:text="25/04/2020"
            android:gravity="end"
            android:layout_gravity="end|center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <net.trejj.talk.views.backgroundtintlayouts.LinearLayoutWithBackgroundTint
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_top_message"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/margin_bottom_message"
        android:background="@drawable/received_message"
        android:orientation="vertical"
        app:linearBgTintColor="@color/gray">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_username_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/blue"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_msg"
                android:src="@android:color/black"
                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height"/>

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/tv_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:autoLink="web"
                android:minWidth="60dp"
                android:paddingTop="5dp"
                android:text="Test"
                android:textColor="@color/received_message_title_color"
                android:textColorLink="#8498fc"
                app:emojiSize="20sp"
                android:textDirection="anyRtl" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_time"
                style="@style/ReceivedMessageTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="12:20 AM" />

        </LinearLayout>
    </net.trejj.talk.views.backgroundtintlayouts.LinearLayoutWithBackgroundTint>

</LinearLayout>