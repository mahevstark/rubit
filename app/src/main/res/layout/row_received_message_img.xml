<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <net.trejj.talk.views.backgroundtintlayouts.LinearLayoutWithBackgroundTint
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_top_message"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/margin_bottom_message"
        android:background="@drawable/received_message"
        android:orientation="vertical"
        app:linearBgTintColor="@color/received_message_background_color">


        <TextView
            android:id="@+id/tv_username_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="test"
            android:textColor="@color/blue"
            android:visibility="gone" />

        <include layout="@layout/item_reply" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="@dimen/img_width"
                android:layout_height="@dimen/img_height">

                <ImageView
                    android:id="@+id/img_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:color/black" />


                <RelativeLayout
                    android:id="@+id/progress_view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.github.abdularis.buttonprogress.DownloadButtonProgress

                        android:id="@+id/progress_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progress_button"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rounded_bg"
                        android:paddingLeft="4dp"
                        android:paddingTop="2dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="2dp"
                        android:text="4 MB"
                        android:textSize="12sp" />


                </RelativeLayout>


            </RelativeLayout>


        </FrameLayout>
        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:autoLink="web"
            android:minWidth="60dp"
            android:paddingTop="5dp"
            android:textColor="@color/sent_message_title_color"
            app:emojiSize="20sp"
            android:textColorLink="#8498fc"
            android:textDirection="anyRtl"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_time"
                style="@style/SentMessageTimeTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:paddingLeft="4dp"
                android:text="12:20 AM" />

        </LinearLayout>
    </net.trejj.talk.views.backgroundtintlayouts.LinearLayoutWithBackgroundTint>


</RelativeLayout>


